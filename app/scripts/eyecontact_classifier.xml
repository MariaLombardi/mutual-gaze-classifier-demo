<application>
<name>mutual gaze classifier</name>
<version>1.0</version>

	<module>
		<name>yarpOpenPose</name>
		<parameters></parameters>
		<node>localhost</node>
	</module>

	
	<!-- Path: realsense -> view -->

	<module>
		<name>yarpview</name>
		<parameters>--name /view/rgb --w 640 --h 480</parameters>
		<node>localhost</node>
	</module>


	<connection>
		<from>/icub/camcalib/right/out</from>
		<to>/view/rgb</to>
		<protocol>mjpeg</protocol>
	</connection>

	
	<!-- Path: real sense -> openPose -> view skeleton -->

	<module>
		<name>yarpview</name>
		<parameters>--name /view/skeleton --w 640 --h 480</parameters>
		<node>localhost</node>
	</module>


	<connection>
		<from>/icub/camcalib/right/out</from>
		<to>/yarpOpenPose/image:i</to>
		<protocol>mjpeg</protocol>
	</connection>

	<connection>
		<from>/yarpOpenPose/image:o</from>
		<to>/view/skeleton</to>
		<protocol>mjpeg</protocol>
	</connection>

	

	<!-- Path: real sense -> openPose -> python module -> view gaze -->


	<module>
	      	<name>yarpview</name>
	      	<parameters>--name /view/eyecontact --w 640 --h 480</parameters>
	      	<node>localhost</node>
	</module>

	
	<connection>
		<from>/icub/camcalib/right/out</from>
		<to>/classifier/image:i</to>
		<protocol>mjpeg</protocol>
	</connection>

	<connection>
		<from>/yarpOpenPose/target:o</from>
		<to>/classifier/data:i</to>
	</connection>

	<connection>
	      	<from>/classifier/image:o</from>
	      	<to>/view/eyecontact</to>
	      	<protocol>mjpeg</protocol>
	</connection>

</application>

